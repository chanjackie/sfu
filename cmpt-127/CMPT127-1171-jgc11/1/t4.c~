#include <stdio.h>
#include <math.h>

int main(void)
{
	float i = 0;
	printf("Please enter a number: ");
	int check = scanf("%f", &i);
	if (check)
	{
		int a = floor(i);
		int b = round(i);
		int c = ceil(i);
		printf("%d %d %d\n", a, b, c);
	}
	else
	{
		printf("scanf error: (%d)\n", check);
	}
	return 0;
}
